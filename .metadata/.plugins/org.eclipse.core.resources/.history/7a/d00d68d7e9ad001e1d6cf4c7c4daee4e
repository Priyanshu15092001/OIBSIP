package com.ors.controller;

import java.util.Scanner;

import com.ors.entity.Reservation;
import com.ors.entity.Users;

public class ReservationController {

	public static Reservation book(Users user) {
		
		Scanner kb=new Scanner(System.in);
		System.out.println("\b\b------------------------------------");
		System.out.print("\b\bEnter train number: ");
		int trainNum=kb.nextInt();
		System.out.print("\b\bEnter class type: ");
		String classType=kb.next();
		System.out.print("\b\bEnter the date of boarding(dd/mm/yyyy): ");
		String date=kb.next();
		System.out.print("\b\bEnter boarding point: ");
		String board=kb.next();
		System.out.print("\b\bEnter destination point: ");
		String dest=kb.next();
		
		Reservation reservation=new Reservation(trainNum,classType,date,board,dest,user.getUserId());
		return reservation;
		
		
	}

	public static int delete() {
		Scanner kb=new Scanner(System.in);
		System.out.println("\b\b------------------------------------");
		System.out.print("\n\b\bEnter the PNR NUMBER: ");
		int pnr=kb.nextInt();
		return pnr;
	}

}
